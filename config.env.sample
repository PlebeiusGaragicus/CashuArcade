# CashuArcade Configuration
# Copy this file to config.env and customize as needed

# Enable debug logging (shows file names and line numbers)
DEBUG=False

# Free play mode (no coins required to play games)
FREE_PLAY=True

# Time in seconds before auto-scrolling through games (AFK mode)
# Set to 0 to disable auto-scroll
AFK_SCROLL_TIME=300

# Override game search paths (colon-separated list)
# By default, searches in the CashuArcade root directory
# Uncomment and customize to add additional search paths:
# LNARCADE_GAME_PATHS=~/CashuArcade:~/OtherGames:/path/to/more/games

# Hardware control settings (Raspberry Pi only)
# Uncomment if using hardware controls:
# CONTROL_ENABLED=True
# ROTARY_ENCODER_PIN=24
# BUTTON_PIN=23
